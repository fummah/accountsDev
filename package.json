{
  "devDependencies": {
    "electron": "^32.2.0",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9"
  },
  "name": "Accounting_App_Demo",
  "version": "1.0.0",
  "description": "Accounts Desktop App",
  "main": "src/backend/main.js",
  "scripts": {
    "start": "concurrently \"npm start --prefix src/frontend\" \"electron .\"",
    "rebuild": "electron-rebuild -f -w sqlite3",
    "test": "",
    "build": "npm run build-react && npm run build-electron",
    "build-react": "cd src/frontend && yarn build",
    "build-electron": "electron-builder",
    "electron-start": "concurrently \"npm start --prefix src/frontend\" \"electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "package": "electron-builder --dir",
    "dist": "electron-builder",
    "electron:build": "npm run build-react && electron-builder -c.extraMetadata.main=src/backend/main.js"
  },
  "build": {
    "appId": "com.tendai.myapp",
    "files": [
      "src/backend/**/*",
      "src/backend/db/**/*",
      "src/frontend/build/**/*",
      "node_modules/**/*",
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraMetadata": {
      "main": "src/backend/main.js"
    },
    "win": {
      "target": "nsis",
      "icon": "favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fummah/accountsDev.git"
  },
  "keywords": [
    "Accounting_App_Demo"
  ],
  "author": "Tendai Fuma",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fummah/accountsDev/issues"
  },
  "homepage": "https://github.com/fummah/accountsDev#readme",
  "dependencies": {
    "better-sqlite3": "^11.5.0",
    "concurrently": "^9.0.1",
    "electron-build": "^0.0.3",
    "express": "^4.21.2",
    "knew": "^0.0.0",
    "sqlite3": "^5.1.7"
  }
}
